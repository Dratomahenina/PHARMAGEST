<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="20.0" style="-fx-background-color: #F4F4F4;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pharmagest.controller.CaisseController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Gestion de la Caisse" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <TableView fx:id="venteTableView" prefHeight="400.0" prefWidth="1160.0" style="-fx-background-color: white; -fx-border-color: #E0E0E0; -fx-border-width: 1px; -fx-border-radius: 5px;">
        <columns>
            <TableColumn fx:id="idVenteColumn" prefWidth="100.0" text="ID Vente" />
            <TableColumn fx:id="medicamentColumn" prefWidth="300.0" text="Médicament" />
            <TableColumn fx:id="quantiteColumn" prefWidth="100.0" text="Quantité" />
            <TableColumn fx:id="prixUnitaireColumn" prefWidth="150.0" text="Prix Unitaire" />
            <TableColumn fx:id="prixTotalColumn" prefWidth="150.0" text="Prix Total" />
            <TableColumn fx:id="dateVenteColumn" prefWidth="150.0" text="Date de Vente" />
        </columns>
    </TableView>

    <GridPane hgap="20.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="120.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" />
        </columnConstraints>

        <Label text="Détails de la Vente :" style="-fx-font-size: 16px;" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="detailsVenteLabel" style="-fx-font-size: 16px;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Montant Total :" style="-fx-font-size: 16px;" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label fx:id="montantTotalLabel" style="-fx-font-size: 16px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Remise :" style="-fx-font-size: 16px;" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label fx:id="remiseLabel" style="-fx-font-size: 16px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Montant Final :" style="-fx-font-size: 16px;" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label fx:id="montantFinalLabel" style="-fx-font-size: 16px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Montant Donné :" style="-fx-font-size: 16px;" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="montantDonneTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Montant Rendu :" style="-fx-font-size: 16px;" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Label fx:id="montantRenduLabel" style="-fx-font-size: 16px;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    </GridPane>

    <HBox alignment="CENTER" spacing="20.0">
        <Button onAction="#handleValiderPaiement" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 16px;" text="Valider Paiement" />
        <Button onAction="#handleImprimerFacture" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 16px;" text="Imprimer Facture" />
        <Button onAction="#handleAfficherCommandesPayees" style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 16px;" text="Afficher Commandes Payées" />
    </HBox>
</VBox>