<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" style="-fx-background-color: #F5F5F5;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.pharmagest.controller.ClientController">
    <children>
        <VBox layoutX="20.0" layoutY="20.0" prefHeight="560.0" prefWidth="960.0" spacing="20.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="20.0">
                    <children>
                        <Label styleClass="title" text="Clients">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#handleAjouterClient" style="-fx-background-color: #1E88E5; -fx-text-fill: white;" text="Ajouter un client">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                            </padding>
                        </Button>
                    </children>
                </HBox>
                <TableView fx:id="clientTable" prefHeight="500.0" prefWidth="960.0" style="-fx-background-color: white;">
                    <columns>
                        <TableColumn fx:id="idClientColumn" prefWidth="50.0" text="ID" />
                        <TableColumn fx:id="nomClientColumn" prefWidth="100.0" text="Nom" />
                        <TableColumn fx:id="prenomClientColumn" prefWidth="100.0" text="Prénom" />
                        <TableColumn fx:id="dateNaissanceClientColumn" prefWidth="120.0" text="Date de naissance" />
                        <TableColumn fx:id="adresseClientColumn" prefWidth="200.0" text="Adresse" />
                        <TableColumn fx:id="telephoneClientColumn" prefWidth="100.0" text="Téléphone" />
                        <TableColumn fx:id="nomMedecinColumn" prefWidth="120.0" text="Nom Médecin" />
                        <TableColumn fx:id="dateCreationColumn" prefWidth="120.0" text="Date Création" />
                    </columns>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>